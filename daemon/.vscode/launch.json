    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "console": "integratedTerminal", // required to debug as root
            "asRoot": true, // required to debug as root
            "program": "${workspaceRoot}",
            "env": {},
            "args": ["-debug_install_dir=${workspaceRoot}", "-logging"],
            //"buildFlags": "-tags debug",
            "buildFlags": "-buildvcs=false -tags debug -ldflags '-X github.com/ivpn/desktop-app/daemon/version._version=3.13.4'"
            //"buildFlags": ""
            //"buildFlags": "-tags nowifi"
        }
    ]
}
